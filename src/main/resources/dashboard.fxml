<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.UserController">

    <!-- Barre de recherche en haut -->
    <top>
        <HBox spacing="10">
            <children>
                <Label text="Rechercher :"/>
                <TextField fx:id="txtRecherche" promptText="Nom, Prénom ou Email"/>
                <Button text="Ajouter Utilisateur" onAction="#ajouterUtilisateur"/>
            </children>
        </HBox>
    </top>

    <!-- Tableau d'utilisateurs au centre -->
    <center>
        <TableView fx:id="tableViewUsers">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="100"/>
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="100"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colRole" text="Rôle" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
