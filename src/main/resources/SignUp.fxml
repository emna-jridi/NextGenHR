<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.SignUpController">
    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="450">
        <Label text="Inscription" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="nomField" promptText="Nom" />
        <TextField fx:id="prenomField" promptText="Prénom" />
        <DatePicker fx:id="dateNaissanceField" promptText="Date de naissance" />
        <TextField fx:id="adresseField" promptText="Adresse" />
        <TextField fx:id="telephoneField" promptText="Téléphone" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Mot de passe" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" />

        <HBox spacing="10">
            <Label text="Rôle :" />
            <CheckBox fx:id="checkboxEmploye" text="Employé" onAction="#handleCheckboxSelection" />
            <CheckBox fx:id="checkboxRH" text="Responsable RH" onAction="#handleCheckboxSelection" />
        </HBox>

        <Button text="S'inscrire" onAction="#handleSignUp" />
        <Hyperlink text="Déjà un compte ? Se connecter" onAction="#goToLogin" />
    </VBox>
</AnchorPane>
