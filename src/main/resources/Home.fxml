<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="660.0" prefWidth="1024.0" style="-fx-background-color: #E3EDF9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">
    <top>
        <AnchorPane prefHeight="71.0" prefWidth="1024.0" style="-fx-background-color: #253D90;">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="800.0" layoutY="15.0" spacing="10" style="-fx-background-color: #FFC20E; -fx-background-radius: 30; -fx-padding: 5px;">
                    <children>
                        <ImageView fitHeight="33.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/User_icon-cp.png" />
                            </image>
                        </ImageView>
                        <Button fx:id="profileButton" onAction="#handleProfile" style="-fx-background-color: transparent; -fx-text-fill: #232423; -fx-font-size: 18px; -fx-font-weight: bold;" text="Profil" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </top>
    <left>
        <AnchorPane prefWidth="280.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <VBox alignment="TOP_CENTER" prefHeight="590.0" prefWidth="280.0" spacing="15" style="-fx-background-color: #253D90; -fx-background-radius: 10; -fx-padding: 20px;">
                    <children>
                        <Button style="-fx-background-color: #FFFFFF; -fx-text-fill: #253D90; -fx-background-radius: 15; -fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion des Salaires" />
                        <Button style="-fx-background-color: #FFFFFF; -fx-text-fill: #253D90; -fx-background-radius: 15; -fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion de Recrutement" />
                        <Button style="-fx-background-color: #FFFFFF; -fx-text-fill: #253D90; -fx-background-radius: 15; -fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion des Compétences" />
                        <Button style="-fx-background-color: #FFFFFF; -fx-text-fill: #253D90; -fx-background-radius: 15; -fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion des Congés" />
                        <Button style="-fx-background-color: #FFFFFF; -fx-text-fill: #253D90; -fx-background-radius: 15; -fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion du Bien-être" />
                        <Button fx:id="btnLogout" onAction="#handleLogout" style="-fx-background-color: #D9534F; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 16px; -fx-font-weight: bold;" text="Déconnexion" alignment="BOTTOM_LEFT"/>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </left>
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #E3EDF9; -fx-background-radius: 10; -fx-padding: 10px;" />
    </center>
</BorderPane>
