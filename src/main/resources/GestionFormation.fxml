<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="769.0" prefWidth="1254.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionFormation">

    <left>
        <VBox minWidth="200" spacing="10" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20" />
            </padding>

            <Label styleClass="title-filter" text="Filtres" />

            <TitledPane expanded="true" text="Catégories">
                <VBox spacing="5">
                    <CheckBox fx:id="devCheckBox" onAction="#applyFilters" text="Développement" />
                    <CheckBox fx:id="managementCheckBox" onAction="#applyFilters" text="Management" />
                    <CheckBox fx:id="comCheckBox" onAction="#applyFilters" text="Communication" />
                    <CheckBox fx:id="rhCheckBox" onAction="#applyFilters" text="Ressources Humaines" />
                </VBox>
            </TitledPane>

            <TitledPane expanded="true" text="Durée">
                <VBox spacing="5">
                    <CheckBox fx:id="dureeCourteCheckBox" onAction="#applyFilters" text="Moins de 5 jours" />
                    <CheckBox fx:id="dureeMoyenneCheckBox" onAction="#applyFilters" text="5-10 jours" />
                    <CheckBox fx:id="dureeLongueCheckBox" onAction="#applyFilters" text="Plus de 10 jours" />
                </VBox>
            </TitledPane>

            <TitledPane expanded="true" text="Niveau">
                <VBox spacing="5">
                    <CheckBox fx:id="debutantCheckBox" onAction="#applyFilters" text="Débutant" />
                    <CheckBox fx:id="intermediaireCheckBox" onAction="#applyFilters" text="Intermédiaire" />
                    <CheckBox fx:id="avanceCheckBox" onAction="#applyFilters" text="Avancé" />
                </VBox>
            </TitledPane>

            <Button fx:id="resetButton" onAction="#resetFilters" styleClass="reset-button" text="Réinitialiser les filtres" />
        </VBox>
    </left>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher une formation..." HBox.hgrow="ALWAYS" />
                <Button fx:id="searchButton" onAction="#searchFormations" text="Rechercher" />
            </HBox>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <FlowPane fx:id="formationsContainer" hgap="15" vgap="15" />
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
