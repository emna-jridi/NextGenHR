<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #E3EDF9; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.LoginController">

    <VBox alignment="CENTER" layoutX="129.0" layoutY="50.0" prefHeight="254.0" prefWidth="342.0" spacing="15" style="-fx-background-color: #FFFFFF; -fx-border-color: #253D90; -fx-border-radius: 10px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #121C3E;" text="Connexion" />

        <TextField fx:id="emailField" prefWidth="300" promptText="Email" style="-fx-background-radius: 5px; -fx-padding: 5px;" />
        <PasswordField fx:id="passwordField" prefWidth="300" promptText="Mot de passe" style="-fx-background-radius: 5px; -fx-padding: 5px;" />

        <Button onAction="#handleLogin" style="-fx-background-color: #253D90; -fx-text-fill: white; -fx-background-radius: 5px; -fx-font-size: 14px;" text="Se connecter" />

        <Label fx:id="errorLabel" style="-fx-font-size: 12px;" textFill="red" />

        <Hyperlink onAction="#goToSignUp" style="-fx-text-fill: #3F861E; -fx-font-size: 14px;" text="Pas encore de compte ? S'inscrire" />
    </VBox>

</AnchorPane>
