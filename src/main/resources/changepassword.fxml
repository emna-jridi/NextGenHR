<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #F4F7FC;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChangePasswordController">

    <!-- Left Panel -->
    <HBox prefHeight="500.0" prefWidth="800.0">
        <VBox prefWidth="350.0" alignment="CENTER" spacing="20" style="-fx-background-color: #253D90; -fx-padding: 30px;">
            <Label text="Plateforme de gestion RH" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Label text="Sécurisez votre compte en mettant à jour votre mot de passe" wrapText="true" textAlignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 14px;" />
        </VBox>

        <!-- Right Panel (Change Password Form) -->
        <VBox prefWidth="450.0" alignment="CENTER" spacing="15" style="-fx-padding: 30px;">
            <Label text="Changer le mot de passe" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #121C3E;" />

            <TextField fx:id="verificationCodeField" promptText="Code de vérification" prefWidth="300" style="-fx-background-radius: 5px; -fx-padding: 10px;" />
            <PasswordField fx:id="newPasswordField" promptText="Nouveau mot de passe" prefWidth="300" style="-fx-background-radius: 5px; -fx-padding: 10px;" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" prefWidth="300" style="-fx-background-radius: 5px; -fx-padding: 10px;" />

            <Button text="Changer le mot de passe" onAction="#handleChangePassword" style="-fx-background-color: #253D90; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;" prefWidth="300" />

            <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 12px;" />

            <Hyperlink text="Retour à la connexion" onAction="#handleLogin" style="-fx-text-fill: #3F861E; -fx-font-size: 14px;" />
        </VBox>
    </HBox>
</AnchorPane>
