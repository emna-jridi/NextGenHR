<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.DetailsContrat">

    <children>
        <!-- Titre -->
        <Label layoutX="20.0" layoutY="20.0" text="Détails du Contrat" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <!-- Affichage des Détails du Contrat -->
        <VBox layoutX="20.0" layoutY="60.0" spacing="10.0">
            <!-- Type de Contrat -->
            <HBox spacing="10.0">
                <Text text="Type de Contrat: " style="-fx-font-weight: bold;"/>
                <Label fx:id="labelTypeContrat"/>
            </HBox>

            <!-- Dates -->
            <HBox spacing="10.0">
                <Text text="Date Début: " style="-fx-font-weight: bold;"/>
                <Label fx:id="labelDateDebut"/>
            </HBox>
            <HBox spacing="10.0">
                <Text text="Date Fin: " style="-fx-font-weight: bold;"/>
                <Label fx:id="labelDateFin"/>
            </HBox>

            <!-- Montant -->
            <HBox spacing="10.0">
                <Text text="Montant: " style="-fx-font-weight: bold;"/>
                <Label fx:id="labelMontant"/>
            </HBox>

            <!-- Statut -->
            <HBox spacing="10.0">
                <Text text="Statut: " style="-fx-font-weight: bold;"/>
                <Label fx:id="labelStatut"/>
            </HBox>

            <!-- Client -->
            <HBox spacing="10.0">
                <Text text="Nom Client: " style="-fx-font-weight: bold;"/>
                <Label fx:id="labelNomClient"/>
            </HBox>
            <HBox spacing="10.0">
                <Text text="Email Client: " style="-fx-font-weight: bold;"/>
                <Label fx:id="labelEmailClient"/>
            </HBox>

            <!-- Services associés -->
            <HBox spacing="10.0">
                <Text text="Services associés: " style="-fx-font-weight: bold;"/>
                <ListView fx:id="listViewServices" prefHeight="100.0" prefWidth="200.0"/>
            </HBox>
        </VBox>

        <!-- Bouton Retour -->
        <Button layoutX="20.0" layoutY="400.0" text="Retour" onAction="#retour"/>
    </children>
</AnchorPane>
