<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.SallesController"
      spacing="15" style="-fx-padding: 20;">


    <!-- En-tête -->
    <Label text="Réservation de Salle" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Filtres -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <VBox spacing="5">
            <Label text="Date"/>
            <DatePicker fx:id="datePicker"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Heure"/>
            <ComboBox fx:id="timeSlotCombo"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Type de salle"/>
            <ComboBox fx:id="roomTypeCombo"/>
        </VBox>
    </HBox>

    <!-- Liste des salles -->
    <TableView fx:id="roomTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="refColumn" text="Référence" prefWidth="100"/>
            <TableColumn fx:id="capacityColumn" text="Capacité" prefWidth="100"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Statut" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Formulaire de réservation -->
    <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
        <Label text="Détails de la réservation" style="-fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <TextField fx:id="meetingTitleField" GridPane.columnSpan="2"/>
            <TextArea fx:id="meetingDescField" prefRowCount="3" GridPane.columnSpan="2" GridPane.rowIndex="1"/>

            <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnSpan="2" GridPane.rowIndex="2">
                <Button fx:id="reserveButton" text="Réserver" disable="true"/>
            </HBox>
        </GridPane>
    </VBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: #666;"/>
</VBox>