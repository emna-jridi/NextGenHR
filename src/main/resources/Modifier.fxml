<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierCongeController">
    <top>
        <HBox spacing="10" style="-fx-background-color: #253D90; -fx-padding: 15;" alignment="CENTER_LEFT">
            <Label text="✏️ Modifier un Congé" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Arial';"/>
        </HBox>
    </top>
    <center>
        <GridPane hgap="15" vgap="15" style="-fx-padding: 30;" alignment="CENTER">
            <Label text="🆔 ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
            <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false" style="-fx-padding: 8px;"/>

            <Label text="🏖️ Type de congé:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="typeCon" promptText="Sélectionner un type" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-padding: 8px;"/>

            <Label text="📆 Date début:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
            <DatePicker fx:id="datedep" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-padding: 8px;"/>

            <Label text="📅 Date fin:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
            <DatePicker fx:id="datefin" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-padding: 8px;"/>

            <Label text="🔖 Statut:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
            <TextField fx:id="status" promptText="Entrez le statut" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-padding: 8px;"/>
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15;">
            <Button text="💾 Enregistrer" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;"/>
            <Button text="❌ Annuler" onAction="#handleCancel" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;"/>
        </HBox>
    </bottom>
</BorderPane>
