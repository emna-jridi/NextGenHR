<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="638.0" prefWidth="900.0" stylesheets="@Css/TeletravailEm.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ReservationSalleController">

     <!-- Liste des salles sous forme de cartes -->
     <ListView fx:id="sallesListView" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="800.0" />

     <!-- Détails de la réservation -->
     <VBox layoutX="344.0" layoutY="367.0" spacing="10">
          <Label text="ID Employé :" />
          <TextField fx:id="idEmployeField" />

          <Label text="Date de réservation :" />
          <DatePicker fx:id="datePicker" />

          <Label text="Durée (HH:MM) :" />
          <TextField fx:id="dureeField" />

          <Button fx:id="btnReserver" onAction="#reserverSalle" text="Réserver" />
     </VBox>

</AnchorPane>
