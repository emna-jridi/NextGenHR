<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.Controller.RhTest"
            prefWidth="900" prefHeight="600">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <VBox spacing="15">
            <Label text="Administration des Tests RH" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Separator/>

            <HBox spacing="20">
                <VBox spacing="10" minWidth="400">
                    <Label text="Assigner un Nouveau Test" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="120" prefWidth="150"/>
                            <ColumnConstraints prefWidth="250"/>
                        </columnConstraints>
                        <Label text="Employé:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ChoiceBox fx:id="employeeChoiceBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>


                        <Label text="Catégorie de Test:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Linux"/>
                                    <String fx:value="DevOps"/>
                                    <String fx:value="Docker"/>
                                    <String fx:value="SQL"/>
                                    <String fx:value="CMS"/>
                                    <String fx:value="Code"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="Nombre de Questions:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Spinner fx:id="questionsSpinner" min="5" max="20" initialValue="10" amountToStepBy="1"
                                 GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"/>

                        <Label text="Date d'échéance:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <DatePicker fx:id="deadlineDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="Infinity"/>

                        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.valignment="TOP"/>
                        <TextArea fx:id="notesTextArea" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                  prefHeight="100" wrapText="true"/>

                        <Button fx:id="assignButton" text="Assigner le Test"
                                onAction="#handleAssignTest"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                                GridPane.columnIndex="1" GridPane.rowIndex="5" maxWidth="Infinity"/>
                    </GridPane>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="0" bottom="0" left="0"/>
            </padding>

            <Label text="Tests Assignés" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TableView fx:id="assignmentsTableView" VBox.vgrow="ALWAYS">
            </TableView>
        </VBox>
    </center>
</BorderPane>