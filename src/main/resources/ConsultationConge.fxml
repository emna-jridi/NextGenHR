<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConsultationCongeController">

    <!-- NAVIGATION BAR -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #253D90; -fx-padding: 15;" alignment="CENTER_LEFT">
            <Label text="📅 Consultation des Congés" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Arial';"/>
            <TextField fx:id="searchField" promptText="Rechercher..." style="-fx-background-radius: 15px; -fx-padding: 5px; -fx-pref-width: 200px;" onKeyReleased="#handleSearch"/>
        </HBox>
    </top>

    <!-- LIST VIEW -->
    <center>
        <VBox style="-fx-padding: 15;" spacing="10">
            <Label text="📋 Liste des Congés" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <ListView fx:id="listViewConge" onMouseClicked="#handleSelection" prefHeight="300" prefWidth="400" style="-fx-border-color: lightgray;"/>
        </VBox>
    </center>

    <!-- BUTTONS -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 15;" alignment="CENTER">
            <HBox spacing="20" alignment="CENTER">
                <Button text="✅ Accepter" fx:id="btnAccepter" onAction="#handleAccepterAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;" disable="true"/>
                <Button text="❌ Refuser" fx:id="btnRefuser" onAction="#handleRefuserAction" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;" disable="true"/>
            </HBox>
            <HBox spacing="20" alignment="CENTER">
                <Button text="📅 Trier" onAction="#handleSortByDateDebutAction" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;"/>
                <Button text="✏️ Modifier" onAction="#handleUpdateAction" style="-fx-background-color: #FFC107; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;"/>
                <Button text="🗑️ Supprimer" onAction="#handleDeleteAction" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;"/>
                <Button text="📊 Statistiques" onAction="#handleStatistiqueAction" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
